{{>navbar}}

<div class="container">
	<div class="">
		{{#each articles}}
		<div class="card article-card">
			<img src="{{image}}" alt="" class="card-img-top">
			<div class="card-body">
				<a href="{{url}}" target="_blank"><p class="card-title">{{title}}</p></a>
				<span class="note-wrapper"><a href="#" id="{{_id}}" class="delete btn">Delete</a>
				<a href="#" id="{{_id}}" class="note btn">{{notes.length}} Notes</a></span>
			</div>
		</div>
		{{!-- {{>modal}} --}}
		<div class="modal modal-{{_id}}" tabindex="-1" role="dialog">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <h5 class="modal-title">{{title}}</h5>
		      </div>
		      <div class="modal-body">
		        <div class="form-group">
				  {{!-- <label for={{_id}}>Enter your notes here</label> --}}
				  <div class="notes-group">
				  {{#each notes}}
				  	<p class="note-entry">{{body}}<span class="note-entry" aria-hidden="true"><a href="#" id="{{_id}}" class="delete-note"><img class="deleteImg" src="./images/delete.png"></img></a></span></p>
				  {{/each}}
				  </div>
				  <textarea class="note-{{_id}} form-control" id="{{_id}}" rows="3"></textarea>
				</div>
		      </div>
		      <div class="modal-footer">
		        <button type="button" id="{{_id}}" class="save-note btn btn-primary">Save Note</button>
		      </div>
		    </div>
		  </div>
		</div>
		{{/each}}
	</div>
</div>

